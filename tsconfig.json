{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs", 
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@UT/*": ["./src/util/*"],
      "@SV/*": ["./src/server/*"],
      "@CMD/*": ["./src/commands/*"],
      "@DB/*": ["./src/database/*"],
      "@JO/*": ["./src/job/*"],
    }
  },
  "include": ["src/**/*"]
}
